---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Cloud & Operations Services | Cognivac â€” Think Beyond Digital',
  description:
    'Optimize your cloud infrastructure and operations. From cloud migration to DevOps automation, we ensure scalable, secure, and efficient cloud operations.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Cloud & Ops"
    actions={[
      { variant: 'primary', text: 'Optimize Your Cloud Infrastructure', href: '/contact' },
      { text: 'Learn More', href: '#overview' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Cloud & Operations',
    }}
  >
    <Fragment slot="title">
      Cloud Infrastructure for <span class="text-accent dark:text-white">Scalable Growth</span>
    </Fragment>

    <Fragment slot="subtitle">
      Powered by <span class="font-semibold">Cloud-Native Technologies</span>. Designed for <span class="font-semibold"
        >Reliable Operations</span
      >.
    </Fragment>
  </Hero>

  <!-- Platform Overview ************ -->

  <Content
    id="overview"
    isReversed
    items={[
      {
        title: 'Cloud Migration',
        description: 'Seamlessly migrate your infrastructure to AWS, Azure, or GCP with minimal downtime.',
        icon: 'tabler:cloud',
      },
      {
        title: 'DevOps Automation',
        description: 'Automate deployment, scaling, and management with CI/CD pipelines and infrastructure as code.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'Infrastructure Monitoring',
        description: 'Real-time monitoring and alerting to ensure optimal performance and availability.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Cost Optimization',
        description: 'Optimize cloud costs while maintaining performance and scalability.',
        icon: 'tabler:coin',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Cloud & Operations Overview',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        A New Era of Cloud Operations
      </h3>
      <p class="text-lg text-muted mb-4">
        Your infrastructure doesn't need complexity â€” it needs <span class="font-semibold"
          >automation, scalability, and reliability</span
        >.
      </p>
      <p class="text-muted">
        Our <span class="font-semibold">Cloud & Operations Services</span> use <span class="font-semibold"
          >cloud-native technologies</span
        > to transform traditional infrastructure into a <span class="font-semibold"
          >scalable, automated, and cost-efficient cloud ecosystem</span
        >.
      </p>
    </Fragment>
  </Content>

  <!-- Cloud Ops Explanation ******* -->

  <Features2
    title="What Is Cloud & Operations?"
    subtitle="Infrastructure that doesn't just run. It optimizes."
    columns={2}
    items={[
      {
        title: 'Infrastructure as Code',
        description: 'Manage infrastructure programmatically for consistency, version control, and automation.',
        icon: 'tabler:code',
      },
      {
        title: 'Automated Scaling',
        description: 'Auto-scaling infrastructure that adapts to load changes automatically.',
        icon: 'tabler:arrows-up-down',
      },
      {
        title: 'Continuous Deployment',
        description: 'Automated CI/CD pipelines for fast, reliable deployments with zero downtime.',
        icon: 'tabler:git-branch',
      },
      {
        title: '24/7 Monitoring',
        description: 'Comprehensive monitoring and alerting to ensure system health and performance.',
        icon: 'tabler:eye',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Strategic Benefits *********** -->

  <Stats
    title="Higher Uptime. Lower Costs. Faster Deployments."
    stats={[
      { title: 'Uptime SLA', amount: '99.99%' },
      { title: 'Cost Reduction', amount: '35%' },
      { title: 'Deployment Speed', amount: '10x Faster' },
      { title: 'Infrastructure Efficiency', amount: '90%' },
    ]}
  />

  <Features3
    columns={2}
    items={[
      {
        title: '99.99% Uptime SLA',
        description: 'Highly available infrastructure with redundancy and failover mechanisms.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Reduce Cloud Costs by 35%',
        description: 'Optimize resource usage and leverage reserved instances to lower costs.',
        icon: 'tabler:coin',
      },
      {
        title: 'Deploy 10x Faster',
        description: 'Automated CI/CD pipelines enable rapid, reliable deployments.',
        icon: 'tabler:rocket',
      },
      {
        title: '90% Infrastructure Efficiency',
        description: 'Right-sized resources and auto-scaling ensure optimal resource utilization.',
        icon: 'tabler:gauge',
      },
    ]}
  />

  <!-- Key Platform Capabilities **** -->

  <Features2
    title="Key Cloud Capabilities"
    subtitle="Enterprise-grade cloud operations powered by modern technologies"
    columns={3}
    items={[
      {
        title: 'Cloud Migration Services',
        description: 'Plan and execute seamless migrations to AWS, Azure, or GCP with minimal disruption.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Container Orchestration',
        description: 'Deploy and manage containerized applications with Kubernetes and Docker.',
        icon: 'tabler:container',
      },
      {
        title: 'CI/CD Pipeline Setup',
        description: 'Build automated deployment pipelines with Jenkins, GitLab CI, or GitHub Actions.',
        icon: 'tabler:git-branch',
      },
      {
        title: 'Infrastructure Monitoring',
        description: 'Monitor infrastructure health, performance, and costs with comprehensive dashboards.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Security & Compliance',
        description: 'Implement security best practices and compliance frameworks for cloud infrastructure.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Disaster Recovery',
        description: 'Design and implement backup and disaster recovery solutions for business continuity.',
        icon: 'tabler:refresh',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Use Cases ******************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Cloud Migration',
        description: 'Migrate legacy systems to the cloud with minimal downtime and risk.',
        icon: 'tabler:cloud-upload',
      },
      {
        title: 'DevOps Transformation',
        description: 'Transform your development and operations with modern DevOps practices and tools.',
        icon: 'tabler:settings',
      },
      {
        title: 'Microservices Architecture',
        description: 'Design and deploy scalable microservices architectures on cloud platforms.',
        icon: 'tabler:apps',
      },
      {
        title: 'Multi-Cloud Strategy',
        description: 'Implement multi-cloud solutions for redundancy and vendor flexibility.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Cost Optimization',
        description: 'Analyze and optimize cloud spending while maintaining performance and reliability.',
        icon: 'tabler:chart-bar',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Use Cases',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Use Cases</h3>
      <p class="text-muted">
        From cloud migration to DevOps transformation, our cloud services adapt to your unique infrastructure needs.
      </p>
    </Fragment>
  </Content>

  <!-- Why Choose Us **************** -->

