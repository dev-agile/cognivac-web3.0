---
import { Icon } from 'astro-icon/components';

import vectorLogo from '~/assets/images/Vector.png';
import bgImage from '~/assets/images/pexels-eva-bronzini.png';
import Image from '~/components/common/Image.astro';

const links = [
  {
    title: 'Services',
    items: [
      { text: 'Services', href: '#' },
      { text: 'Industries', href: '#' },
      // { text: 'Page 3', href: '#' },
    ],
  },
  {
    title: 'Company',
    items: [
      { text: 'About', href: '#' },
      { text: 'Blog', href: '#' },
      { text: 'Career', href: '#' },
    ],
  },
  {
    title: 'Platform',
    items: [
      { text: 'Developer API', href: '#' },
      { text: 'Cybersecurity', href: '#' },
      { text: 'Enterprise', href: '#' },
    ],
  },
];
---

<footer class="relative text-white py-12 md:py-20 overflow-hidden min-h-[400px]">
  {/* Background image: img with resolved src so asset always shows */}
  <div class="absolute inset-0 w-full h-full pointer-events-none overflow-hidden" aria-hidden="true">
    <Image src={bgImage} alt="" class="w-full h-full object-cover object-center" />
  </div>
  {/* Dark overlay for text readability (lighter so texture shows) */}
  <div class="absolute inset-0 w-full h-full bg-black/40 pointer-events-none" aria-hidden="true"></div>
  {/* Texture Overlay */}
  <div
    class="absolute inset-0 w-full h-full opacity-20 pointer-events-none"
    style="background-image: url('https://www.transparenttextures.com/patterns/stardust.png');"
    aria-hidden="true"
  >
  </div>

  {/* Scrolling Ticker */}
  <div class="w-full overflow-hidden mb-16 md:mb-24 opacity-30">
    <div class="whitespace-nowrap animate-marquee flex gap-8">
      {
        Array(10)
          .fill(0)
          .map(() => (
            <>
              <span class="text-xs font-bold tracking-[0.2em]">Cybersecurity+++</span>
              <span class="text-xs font-bold tracking-[0.2em]">AI+++</span>
              <span class="text-xs font-bold tracking-[0.2em]">MOBILE+++</span>
            </>
          ))
      }
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
    {/* Top: headline left, email + Sign Up right */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-20 items-center">
      <div>
        <h2 class="footer-headline-1 text-white mb-2">Start up-ready</h2>
        <h2 class="footer-headline-2 text-white">products, built fast.</h2>
      </div>
      <div class="flex flex-col justify-center md:items-end">
        <form class="flex w-full max-w-sm gap-2 md:ml-auto">
          <input
            type="email"
            placeholder="Email"
            class="px-4 py-3 rounded-lg bg-white text-gray-900 placeholder-gray-400 focus:outline-none flex-grow min-w-0"
          />
          <button
            type="submit"
            class="px-6 py-3 rounded-lg bg-white text-black font-bold uppercase text-xs tracking-wider hover:bg-gray-100 transition-colors shrink-0"
          >
            Sign Up
          </button>
        </form>
      </div>
    </div>

    {/* Divider */}
    <div class="w-full h-px bg-white/20 mb-12" aria-hidden="true"></div>

    <div class="flex flex-row justify-between gap-16">
      {/* Brand / Copyright */}
      <div class="col-span-1 md:col-start-1 flex flex-col items-center">
        <div class="w-36 h-36 rounded-full flex items-center justify-center mb-4 overflow-hidden shadow-lg shrink-0">
          <Image src={vectorLogo.src} alt="Cognivac" class="w-full h-full object-contain" />
        </div>
        <p class="text-xs text-gray-400">Â© 2026 Cognivac. All rights reserved.</p>
      </div>

      {/* Links */}
      <div class="flex flex-col justify-between w-[70%]">
        <div class="flex flex-row justify-between gap-8">
          {
            links.map((column) => (
              <div class="flex flex-col gap-3">
                {column.items.map((link) => (
                  <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                    {link.text}
                  </a>
                ))}
              </div>
            ))
          }
        </div>

        {/* Social Icons - bottom right on desktop */}
        <div class="flex justify-start md:justify-end gap-4 mt-8 md:mt-0">
          <Icon name="tabler:brand-instagram" class="w-5 h-5 text-gray-400 hover:text-white cursor-pointer" />
          <Icon name="tabler:brand-twitter" class="w-5 h-5 text-gray-400 hover:text-white cursor-pointer" />
          <Icon name="tabler:brand-youtube" class="w-5 h-5 text-gray-400 hover:text-white cursor-pointer" />
          <Icon name="tabler:rss" class="w-5 h-5 text-gray-400 hover:text-white cursor-pointer" />
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Heading line 1: Almarai, 400, 48px, line-height 72px */
  .footer-headline-1 {
    font-family: Almarai, ui-sans-serif, sans-serif;
    font-weight: 400;
    font-size: 48px;
    line-height: 72px;
    letter-spacing: 0;
  }

  /* Heading line 2: Cormorant Garamond, 500, italic, 64px, line-height 72px */
  .footer-headline-2 {
    font-family: 'Cormorant Garamond', ui-serif, serif;
    font-weight: 500;
    font-style: italic;
    font-size: 64px;
    line-height: 72px;
    letter-spacing: 0;
  }

  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
