<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <div class="mb-12 flex justify-between items-end">
    <div>
      <!-- <h2 class="text-4xl md:text-5xl font-bold font-serif mb-4">
        Industries <span class="font-sans font-bold">we serve</span>
      </h2> -->
      <h1 class="flex flex-wrap items-baseline justify-center gap-x-2 hero-think">
        <span class="font-normal italic text-[72px] leading-[108px]">Industries {' '}</span>
        <span class="font-[700] text-[64px] leading-[108px]">{' '} we serve</span>
      </h1>
      <p class="industries-tagline text-gray-500">Expert, approachable, and relentlessly useful.</p>
    </div>
    <a
      href="#"
      class="hidden md:inline-block px-6 py-2 rounded-full border border-gray-300 text-sm font-semibold hover:border-black transition-colors"
    >
      Write to us
    </a>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-4 md:grid-rows-4 gap-6 md:auto-rows-fr">
    {
      industries.map((item) => (
        <div
          class={`group relative rounded-3xl overflow-hidden border border-gray-100 bg-white hover:shadow-lg transition-shadow flex flex-col justify-between p-6 ${item.grid}`}
        >
          {item.image && (
            <div
              class="absolute inset-0 z-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"
              aria-hidden="true"
            >
              <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${item.image}');`} />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent" />
            </div>
          )}

          <div class="relative z-10 mb-4">{item.icon && <span class={`text-3xl ${item.color}`}>{item.icon}</span>}</div>

          <div class="relative z-10">
            <h3 class="text-xl font-serif font-bold mb-2 text-gray-900 group-hover:text-white transition-colors">
              {item.title}
            </h3>
            <p class="text-sm leading-relaxed text-gray-500 group-hover:text-gray-200 transition-colors">
              {item.description}
            </p>
          </div>
        </div>
      ))
    }

    {/* Arrow Card - 1√ó1 at (4,4); smaller, same size as Transport */}
