---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const { id, isDark = true, classes = {}, bg = await Astro.slots.render('bg') } = Astro.props;

interface Stat {
  amount: string;
  title: string;
  description: string;
}

const stats: Stat[] = [
  {
    amount: '100%',
    title: 'ROI',
    description: 'Every $1 in UX returns up to $100 â€” proving design drives profitability.',
  },
  {
    amount: '65%',
    title: 'Engagement',
    description: 'AI engine drove 65% engagement lift for a top retailer, boosting repeat sales.',
  },
  {
    amount: '40%',
    title: 'Cost cut',
    description: 'Microservices cut costs 40% and boosted performance.',
  },
];
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`}
  bg={bg || '<div class="absolute inset-0 bg-[#111111] dark:bg-[#030621]"></div>'}
  classes={{ bg: 'absolute inset-0 bg-[#111111] dark:bg-[#030621]' }}
>
  {/* Texture Overlay */}
  <div
    class="absolute inset-0 opacity-10 pointer-events-none"
    style="background-image: url('https://www.transparenttextures.com/patterns/cubes.png');"
  >
  </div>

  <div class="relative z-10 flex flex-col md:flex-row items-center justify-between mb-16">
    <div class="md:w-1/2 mb-8 md:mb-0">
      <h2 class="text-4xl font-bold text-white mb-2">Facts</h2>
    </div>
    <div class="md:w-1/2 flex justify-start md:justify-end">
      <a
        href="/contact"
        class="inline-block px-8 py-3 rounded-full border border-gray-500 text-white hover:bg-white hover:text-black transition-colors"
      >
        Get your free consultation
      </a>
    </div>
  </div>

  <div class="relative z-10 mb-20">
    <h3 class="text-3xl md:text-5xl text-gray-300 font-serif leading-tight">
      Empowering <span class="italic font-normal">startups & enterprises</span> with data-driven AI, engineering & design.
    </h3>
  </div>

  <div class="relative z-10 grid grid-cols-1 md:grid-cols-3 gap-12 text-white">
    {
      stats.map((stat) => (
        <div class="border-t border-gray-700 pt-8">
          <div class="text-6xl font-light mb-4">{stat.amount}</div>
          <div class="text-3xl font-serif italic mb-4">{stat.title}</div>
          <p class="text-gray-400 leading-relaxed text-sm">{stat.description}</p>
        </div>
      ))
    }
  </div>
</WidgetWrapper>
