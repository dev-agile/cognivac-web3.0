---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

import statsBgImage from '~/assets/images/pexels-eva-bronzini.png';

const { id, isDark = true, classes = {}, bg = await Astro.slots.render('bg') } = Astro.props;

interface Stat {
  amount: string;
  title: string;
  description: string;
}

const stats: Stat[] = [
  {
    amount: '100%',
    title: 'ROI',
    description: 'Every $1 in UX returns up to $100 â€” proving design drives profitability.',
  },
  {
    amount: '65%',
    title: 'Engagement',
    description: 'AI engine drove 65% engagement lift for a top retailer, boosting repeat sales.',
  },
  {
    amount: '40%',
    title: 'Cost cut',
    description: 'Microservices cut costs 40% and boosted performance.',
  },
];
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`relative ${classes?.container ?? ''}`}>
  <!-- <div
  class="relative overflow-hidden rounded-3xl px-6 py-16 md:px-12 md:py-24"
  style={`background-image: 
    linear-gradient(rgba(0,0,0,0.65), rgba(0,0,0,0.65)),
    url('${statsBgImage.src}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  `}
> -->
  <!-- Background: image + overlay (rendered in template so image import is resolved) -->
  <Fragment slot="bg">
    <div
      class="absolute inset-0 bg-cover bg-center bg-no-repeat"
      style={`background-image: url('${statsBgImage.src}');`}
    >
    </div>
    <div class="absolute inset-0"></div>
  </Fragment>

  <div class="relative z-10 flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12 md:mb-16">
    <div class="md:w-1/2 mb-8 md:mb-0">
      <h2 class="text-4xl font-bold text-white mb-2">Facts</h2>
    </div>
    <div class="md:w-1/2 flex justify-start md:justify-end">
      <a
        href="/contact"
        class="inline-block px-8 py-3 rounded-full border border-gray-500 text-white hover:bg-white hover:text-black transition-colors"
      >
        Get your free consultation
      </a>
    </div>
  </div>

  <div class="relative z-10 mb-20">
    <h3 class="text-3xl md:text-5xl text-gray-300 font-serif leading-tight">
      Empowering <span class="italic font-normal">startups & enterprises</span> with data-driven AI, engineering & design.
    </h3>
  </div>

  <div class="relative z-10 grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-12 text-white">
    {
      stats.map((stat) => (
        <div class="text-left">
          <div class="text-5xl md:text-6xl font-bold mb-2">{stat.amount}</div>
          <div class="text-xl md:text-2xl font-serif italic text-white mb-3">{stat.title}</div>
          <p class="text-sm md:text-base text-white/90 leading-relaxed">{stat.description}</p>
        </div>
      ))
    }
  </div>
  <!-- </div> -->
</WidgetWrapper>
